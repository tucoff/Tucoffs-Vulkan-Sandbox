{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Vulkan Project",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Vulkan Executable",
      "type": "shell",
      "command": "make test",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "make clean"
    }
  ]
}
